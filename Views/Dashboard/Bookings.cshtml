@model IEnumerable<OnlineVehicleRentalSystem.Models.Booking>

@{
    ViewData["Title"] = "Manage Bookings";
}

<h2>Manage Bookings</h2>

<!-- Button to redirect to the Add Booking page -->
<a href="@Url.Action("AddBooking", "Dashboard")" class="btn btn-primary mb-3">Make a New Booking</a>

<h3 class="mt-5">Your Bookings</h3>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered mt-3">
        <thead class="thead-light">
            <tr>
                <th scope="col">Vehicle</th>
                <th scope="col">Rental Date</th>
                <th scope="col">Return Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Vehicle?.Model (@booking.Vehicle?.Year)</td>
                    <td>@booking.RentalDate.ToString("yyyy-MM-dd")</td>
                    <td>@booking.ReturnDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found.</p>
}
