@model OnlineVehicleRentalSystem.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>

<form asp-action="EditBooking" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="UserId">User</label>
        <input asp-for="UserId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="VehicleId">Vehicle</label>
        <select asp-for="VehicleId" class="form-control">
            @foreach (var vehicle in ViewBag.Vehicles)
            {
                if (vehicle.Id == Model.VehicleId)
                {
                    <option value="@vehicle.Id" selected>@vehicle.Model (@vehicle.Year)</option>
                }
                else
                {
                    <option value="@vehicle.Id">@vehicle.Model (@vehicle.Year)</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="RentalDate">Rental Date</label>
        <input asp-for="RentalDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="ReturnDate">Return Date</label>
        <input asp-for="ReturnDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
